                for j in range(m):
                    if e(i,j).name in solver.get_model():
                        print(e(i,j).name)
                        new_bound += 1
            print("New bound", new_bound)
            bound = new_bound - 1
        else:
            satisfiable = False
            print("unsatisfiable")


result = np.zeros((n,m))
for i in range(n):
    for j in range(m):
        if s(i,j).name in last_model:
            result[i][j] = 1

