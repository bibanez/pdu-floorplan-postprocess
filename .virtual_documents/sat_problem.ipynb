e = lambda i, j: Atom(vpool.id('e{},{}'.format(i, j)))
s = lambda k, i, j: Atom(vpool.id('s{},{},{}'.format(k, i, j)))
l = lambda k, i: Atom(vpool.id('l{},{}'.format(k, i)))
r = lambda k, i: Atom(vpool.id('r{},{}'.format(k, i)))
